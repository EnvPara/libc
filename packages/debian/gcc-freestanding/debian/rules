#!/usr/bin/make -f
TARGET=x86_64-elf-redox

%:
	mkdir -p build
	dh $@ --builddirectory=build

override_dh_auto_clean:
	dh_auto_clean
	rm -rf build

override_dh_auto_configure:
	mkdir -p build
	cd build && ../../../../gcc/configure \
	  --target="$(TARGET)" \
	  --prefix=/usr \
		--disable-nls \
		--enable-languages=c,c++ \
		--without-headers

override_dh_auto_build:
	mkdir -p build
	cd build && make all-gcc all-target-libgcc
